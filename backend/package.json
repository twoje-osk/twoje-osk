{
  "name": "@osk/backend",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "nest start --watch",
    "dev:debug": "nest start --debug --watch",
    "start": "nest start",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "build": "nest build",
    "start:prod": "node dist/main",
    "prebuild": "rimraf dist",
    "typeorm": "typeorm-ts-node-esm -d src/data-source.ts",
    "create-migration": "typeorm-ts-node-esm migration:generate -d src/data-source.ts",
    "create-empty-migration": "typeorm-ts-node-esm migration:create",
    "migrate": "typeorm-ts-node-esm migration:run -d src/data-source.ts"
  },
  "dependencies": {
    "@faker-js/faker": "^6.1.2",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/mapped-types": "^1.0.1",
    "@nestjs/platform-fastify": "^8.4.4",
    "@nestjs/typeorm": "^8.0.3",
    "@osk/shared": "1.0.0",
    "dotenv": "^16.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "2.6.2",
    "source-map-support": "^0.5.20",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  }
}
